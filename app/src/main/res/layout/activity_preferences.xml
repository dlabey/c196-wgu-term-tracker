<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:label="My Activity Title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.wgu.termtracker.activities.PreferencesActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:padding="5dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            style="@style/AppTextViewStyle"
            android:text="Course Alerts" />

        <Switch
            android:id="@+id/courseAlerts"
            style="@style/AppSwitchStyle"
            android:textOff="Off"
            android:textOn="On" />

        <TextView
            style="@style/AppTextViewStyle"
            android:text="Minutes Before Course To Alert" />

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/courseAlertMinutes"
            style="@style/AppDiscreetSeekBar"
            app:dsb_min="5"
            app:dsb_max="15" />

        <TextView
            style="@style/AppTextViewStyle"
            android:text="Assessment Alerts" />

        <Switch
            android:id="@+id/assessmentAlerts"
            style="@style/AppSwitchStyle"
            android:textOff="Off"
            android:textOn="On" />

        <TextView
            style="@style/AppTextViewStyle"
            android:text="Minutes Before Assessment To Alert" />

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/assessmentAlertMinutes"
            style="@style/AppDiscreetSeekBar"
            app:dsb_min="5"
            app:dsb_max="15" />

        <TextView
            style="@style/AppTextViewStyle"
            android:text="Sharing Method" />

        <ToggleButton
            android:id="@+id/sharingMethod"
            style="@style/AppToggleButton"
            android:showText="true"
            android:textOff="Email"
            android:textOn="SMS" />

        <Button
            android:id="@+id/saveButton"
            style="@style/AppButton"
            android:onClick="onSaveButtonClick"
            android:text="Save" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
